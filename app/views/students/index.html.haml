.jumbotron
  %center
    %h1.students Student List
    = button_to "Add Student", new_student_path, method: :get, class: "buttonlink"
    %br
    %br
      - @students.each do |student|
        %li
          %strong
            = link_to "#{student.first_name} - #{student.last_name}",student_path(student)
            |
            = link_to "Edit", edit_student_path(student)
            |
            = link_to "Delete", student_path(student), method: :delete
      %br
    = link_to "Home", root_path